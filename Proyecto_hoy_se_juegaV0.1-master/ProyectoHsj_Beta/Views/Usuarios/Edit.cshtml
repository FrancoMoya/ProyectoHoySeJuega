@model ProyectoHsj_Beta.ViewsModels.UsuarioEditViewModel

@{
    ViewData["Title"] = "Editar Usuario";
    Layout = "~/Views/Shared/Layout_admin.cshtml";
}
    <h1>Editar Usuario</h1>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="IdUsuario" />

                <div class="form-group mb-3">
                    <label asp-for="Activo" class="control-label">¿Activo?</label>
                    <select asp-for="Activo" class="form-control" asp-items="Model.ActivoOptions"></select>
                    <span asp-validation-for="Activo" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="IdRol" class="control-label">Rol</label>
                    <select asp-for="IdRol" asp-items="Model.Roles" class="form-control">
                        <option value="">Seleccione un rol</option> <!-- Valor vacío para "Sin rol" -->
                    </select>
                    <span asp-validation-for="IdRol" class="text-danger"></span>
                </div>


                <div class="form-group d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>




