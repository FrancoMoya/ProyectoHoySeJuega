
<!DOCTYPE html>
<html lang="es">
<head>
    <!-- Metadatos -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin</title>

    <!-- Bootstrap y Font Awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <link rel="icon" type="image/png" href="~/css/img/hoysejuegaa.png" />

    <!-- Archivos CSS personalizados -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/New.css" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" />

    <style>

        /* Estilos personalizados */
        body {
            background-image: url('/css/img/logo/fondo admin.png');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center;
            color: white;
        }
        /* Asegúrate de que el sidebar se oculta inicialmente */
        #sidebar-wrapper {
            width: 250px;
            min-height: 100vh;
            background-color: #343a40;
            transition: margin 0.3s ease;
            margin-left: -250px; /* El sidebar está oculto al inicio */
        }

        /* Establecer el comportamiento cuando el wrapper tiene la clase 'toggled' */
        #wrapper.toggled #sidebar-wrapper {
            margin-left: 0; /* El sidebar se muestra */
        }

        #wrapper {
            display: flex;
            min-height: 100vh;
        }


        #page-content-wrapper {
            flex: 1;
            overflow-x: hidden;
        }

        

        .btn-custom {
            position: relative;
        }

            .btn-custom a {
                display: block;
                height: 100%;
                width: 100%;
                text-align: center;
                padding: 10px;
                color: inherit;
                text-decoration: none;
            }

            .btn-custom:hover {
                background-color: black;
            }
        /* Botón de menú */
        .toggle-btn {
            border-radius: 0px;
            padding: 10px 20px;
            font-size: 16px;
            transition: background-color 0.3s ease;
            margin-top: 0px;
        }

            .toggle-btn:hover {
                background-color: #495057;
            }


        

    </style>
        @RenderSection("Styles", required: false)

</head>
<body>

    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            @Html.Partial("_AdminSidebar")
        </div>

        <!-- Contenido de la página -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light" style="border-bottom: 0px !important; background-color: #343a40 !important">
                <div class="container-fluid">
                    <!-- Botón de menú con icono -->
                    <button class="btn btn-dark toggle-btn" style="background-color: #495057 !important; padding: 10px 20px !important; border-radius: 10px !important; border-bottom: 0px !important" id="menu-toggle">
                        <i class="bi bi-list"></i>
                    </button>

                    <!-- Texto centrado en el navbar -->
                    <div class="mx-auto text-center flex-grow-1" style="background-color: #343a40 !important">
                        <span class="navbar-text text-white h5">Panel de Administración</span>
                    </div>
                </div>
            </nav>

            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>



    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Toggle del menú lateral
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
