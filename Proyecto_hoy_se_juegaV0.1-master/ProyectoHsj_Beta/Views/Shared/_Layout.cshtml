<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hoy se juega </title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    @* <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script> *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-mr0sEQx0ugYb43aCvEd24S/IqrBKTFFmwSDQHl3j06YlXIQo6RuCZ1w5o9sMR4bo" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- cdn para foto de pestaña -->
    <link rel="icon" type="image/png" href="~/css/img/hoysejuegaa.png" />
    <!-- cdn para full calendar -->
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/main.min.css" rel="stylesheet" />

    <!-- Custom Styles -->
    <link href="~/css/Style_navbar.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoHsj_alpha.styles.css" asp-append-version="true" />

    <style>
        .maps {
            background-color: black;
            padding: 40px 0;
            position: relative;
            width: 100%; /* Ocupa el 100% del ancho disponible */
            max-width: 100%; /* Asegura que no se desborde */
            margin: 0 10px; /* Pequeño margen a los lados */
            box-sizing: border-box; /* Incluye el padding en el cálculo del ancho */
            display: flex;
            justify-content: center; /* Centra el mapa horizontalmente */
            align-items: center; /* Centra el mapa verticalmente */
        }

        iframe {
            width: 100%; /* Hace que el iframe ocupe todo el ancho disponible */
            max-width: 900px; /* Puedes ajustar el tamaño máximo a tu preferencia */
            height: 300px; /* Altura del mapa */
            border: 0; /* Quita el borde */
        }
        /* Cambia el fondo del dropdown y el color del texto */
        .nav-item.dropdown .dropdown-menu {
            background-color: #343a40; /* Color oscuro para el fondo del menú */
            color: #fff; /* Asegura que el texto sea blanco */
        }

        /* Cambia el color del texto de "Hola, usuario" para hacerlo más visible */
        .nav-item.dropdown .nav-link {
            color: #ffffff; /* Blanco para el texto */
        }

        /* Asegúrate de que el texto del dropdown también sea legible */
        .nav-item.dropdown .dropdown-item {
            color: #ffffff; /* Blanco para los ítems del menú */
        }

            /* Cambia el color al pasar el mouse por encima de un item del dropdown */
            .nav-item.dropdown .dropdown-item:hover {
                background-color: #007bff; /* Color azul para el hover */
            }
        /* Asegura que las imágenes del carrusel siempre cubren el espacio del contenedor */
        .carousel-inner img {
            width: 100%; /* Asegura que la imagen ocupe todo el ancho del contenedor */
            height: 100%; /* Asegura que la imagen ocupe todo el alto del contenedor */
            object-fit: cover; /* Hace que la imagen se ajuste, recortando si es necesario */
        }

        /* Para asegurar que el contenedor del carrusel tenga la altura correcta */
        .carousel-item {
            height: 400px; /* Ajusta esta altura según el tamaño que prefieras */
        }
        /* Para pantallas grandes, puedes dejar el tamaño como está */
        /* Para pantallas grandes, el carrusel tendrá una altura de 400px */
        @@media (min-width: 992px) {
            .carousel-item {
                height: 500px; /* Mayor altura en pantallas grandes */
            }
        }

        /* Para pantallas medianas y pequeñas, ajusta la altura del carrusel */
        @@media (max-width: 991px) {
            .carousel-item {
                height: 300px; /* Ajusta la altura para pantallas más pequeñas */
            }
        }
    </style>

    @RenderSection("Styles", required: false)


</head>
<body>
    <header>
        <div class="container-center">
            <nav class="navbar navbar-expand-sm shadow mb-3">
                <a class="lg" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/css/img/hoysejuegaa.png" alt="Hoy se juega" class="img-fluid" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>

                        @if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Reservas" asp-action="Reservar">Reservar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Reservas" asp-action="MisReservas">Mis reservas</a>
                            </li>
                            @if (User.IsInRole("2")) // Admin
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Admin_home">Panel Administrador</a>
                                </li>
                            }
                            else if (User.IsInRole("3")) // Employed
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Admin_home">Panel Operador</a>
                                </li>
                            }
                            <!-- Desplegar el nombre del usuario -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="perfilDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Hola, @User.Identity.Name! <!-- Nombre del usuario logueado -->
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="perfilDropdown">
                                    <li><a class="dropdown-item" asp-controller="PerfilU" asp-action="Perfil">Ver Perfil</a></li>
                                    <li class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Acces" asp-action="Cerrar">Cerrar sesión</a></li>
                                </ul>
                            </li>

                        }
                        @if (!User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Acces" asp-action="Login">Acceso</a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="pb-3">
        <div class="maps">
            <div class="container">
                <div class="align-items-center">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3280.430435698638!2d-58.478831225594874!3d-34.69432181307689!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bccf548d3bf9c3%3A0x3356bcb2fd8a5151!2sHoy%20se%20juega%20f%C3%BAtbol%205!5e0!3m2!1ses-419!2sar!4v1725323915380!5m2!1ses-419!2sar"
                                width="900" height="300" style="border:0;" allowfullscreen=""
                                loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div> 
        </div>
        <p>
            <a href="https://www.instagram.com/hoy_se_juega/" style="color: #E1306C;">
                <i class="fa-brands fa-instagram"></i>
            </a>
            <a href="https://wa.me/5491122760377" style="color: #25D366;">
                <i class="fa-brands fa-whatsapp"></i>
            </a>
            <a href="https://beelup.com/ar/" style="color: #007bff;">
                <i class="bi bi-display"></i>
            </a>
            <a href="/" style="color: #007bff;">
                <i class="bi bi-house"></i>
            </a>
        </p>
        <p>© 2024 G.O.S.F.P.S. Todos los derechos reservados.</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>


    <!-- jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap JS (Incluye Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Script para Full Calendar -->
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/main.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- scripts customs -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- scripts render -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>