@model ProyectoHsj_Beta.ViewsModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<h2 style="text-align: center; color: white;">Restablecer Contraseña</h2>

<form asp-action="ResetPassword" method="post" style="max-width: 400px; margin: 0 auto;">
    <input type="hidden" asp-for="Token" />

    <div class="form-group" style="margin-bottom: 15px;">
        <label asp-for="NewPassword" style="color: white;">Nueva Contraseña</label>
        <input asp-for="NewPassword" class="form-control"
               placeholder="Nueva contraseña"
               style="height: 35px; padding: 5px;" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="form-group" style="margin-bottom: 15px;">
        <label asp-for="ConfirmPassword" style="color: white;">Confirmar Contraseña</label>
        <input asp-for="ConfirmPassword" class="form-control"
               placeholder="Confirmar contraseña"
               style="height: 35px; padding: 5px;" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-block" style="width: 100%; height: 40px;">
        Restablecer
    </button>
</form>
