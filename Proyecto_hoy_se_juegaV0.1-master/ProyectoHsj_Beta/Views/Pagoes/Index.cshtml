@model ProyectoHsj_Beta.ViewsModels.PagoViewModel

@{
    ViewData["Title"] = "Pago de la seña";
}

<!-- Estilos personalizados -->
<style>
    body {
        background-color: #202021;
    }

    .card {
        max-width: 500px;
        margin: 20px auto;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 28px 19px;
        background-color: #ffffff;
        border-radius: 10px;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #007bff;
    }

    .card-text {
        font-size: 1.1rem;
        color: #495057;
        margin-bottom: 15px;
    }

        .card-text strong {
            color: #343a40;
        }

    .btn {
        border-radius: 30px;
        transition: background-color 0.3s ease;
        padding: 10px 20px;
        font-size: 1.1rem;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-primary:focus {
            outline: none;
        }
</style>



<div class="card">
    <div class="card-body">
        <h5 class="card-title">Detalles de la Reserva y Seña</h5>
        <p class="card-text">Para que su reserva quede confirmada debe realizar el pago de la seña.</p>
        <p class="card-text">
            <strong>Fecha a Reservar</strong> @Model.FechaReserva.ToString("dd-MM-yyyy")
        </p>
        <p class="card-text">
            <strong>Horario:</strong> @Model.HoraInicio.ToString("HH:mm") - @Model.HoraFin.ToString("HH:mm")
        </p>
        <p class="card-text">
            <strong>Monto a Pagar:</strong> $@Model.Monto.ToString("N0")
        </p>
        <p class="card-text">
            <strong>Método de Pago:</strong> Mercado Pago
        </p>
        <p class="card-text">
            <strong>(Recordá que solo dispones de 3 minutos para terminar de concretar el pago de la seña)</strong>
        </p>

        <form asp-controller="Reservas" asp-action="PagarReserva" method="post">
            <input type="hidden" name="ReservaId" value="@Model.ReservaId" />
            <input type="hidden" name="Monto" value="@Model.Monto" />
            <div class="d-grid d-md-flex justify-content-md-end">
                <button type="submit" class="btn btn-primary">
                    Pagar con Mercado Pago
                </button>
            </div>
        </form>
    </div>
</div>