@model ProyectoHsj_Beta.ViewsModels.PagoViewModel

@{
    ViewData["Title"] = "Detalle de Pago";
}

<!-- Estilos personalizados -->
<style>
    body {
        background-color: #f8f9fa;
    }

    h2 {
        text-align: center;
        margin-top: 40px;
        color: #343a40;
    }

    .card {
        max-width: 500px;
        margin: 20px auto;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 30px;
        background-color: #ffffff;
        border-radius: 10px;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #007bff;
    }

    .card-text {
        font-size: 1.1rem;
        color: #495057;
        margin-bottom: 15px;
    }

        .card-text strong {
            color: #343a40;
        }

    .btn {
        border-radius: 30px;
        transition: background-color 0.3s ease;
        padding: 10px 20px;
        font-size: 1.1rem;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-primary:focus {
            outline: none;
        }
</style>

<h2>Detalle de Pago</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Detalles de la Reserva</h5>
        <p class="card-text">
            <strong>ID de la Reserva:</strong> @Model.ReservaId
        </p>
        <p class="card-text">
            <strong>Monto a Pagar:</strong> $@Model.Monto
        </p>
        <p class="card-text">
            <strong>Método de Pago:</strong> Mercado Pago
        </p>

        <form asp-controller="Reservas" asp-action="PagarReserva" method="post">
            <input type="hidden" name="ReservaId" value="@Model.ReservaId" />
            <input type="hidden" name="Monto" value="@Model.Monto" />
            <button type="submit" class="btn btn-primary">Pagar con Mercado Pago</button>
        </form>
    </div>
</div>