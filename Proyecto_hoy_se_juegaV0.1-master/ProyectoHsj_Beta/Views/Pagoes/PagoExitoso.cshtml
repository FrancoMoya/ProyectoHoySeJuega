@{
    ViewData["Title"] = "Pago Exitoso";
    int reservaId = ViewBag.ReservaId;
    decimal montoSena = ViewBag.MontoSena;
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card text-center shadow p-4" style="width: 22rem;">
        <div class="card-body">
            <h3 class="card-title text-success">¡Pago Exitoso!</h3>
            <p class="card-text mt-3">
                <strong>ID de Reserva:</strong> @reservaId <br />
                <strong>Monto Pagado (Sena):</strong> $@montoSena
            </p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-4">Volver al Inicio</a>
        </div>
    </div>
</div>