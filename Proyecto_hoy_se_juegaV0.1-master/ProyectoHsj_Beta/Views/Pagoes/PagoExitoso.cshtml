@{
    ViewData["Title"] = "Pago Exitoso";
    int reservaId = ViewBag.ReservaId;
    decimal montoSena = ViewBag.MontoSena;
}

@* Sección de estilos adicionales para el modo oscuro *@
@section Styles {
    <style>
        body {
            background-color: #121212; /* Fondo oscuro */
            color: #e0e0e0; /* Texto claro */
        }

        .card {
            background-color: #1e1e1e; /* Fondo de la tarjeta oscuro */
            border: none;
            color: #e0e0e0; /* Texto claro dentro de la tarjeta */
        }

        .card-title {
            color: #4CAF50; /* Título verde para resaltar */
        }

        .btn-primary {
            background-color: #6200ea; /* Botón morado con buen contraste */
            border: none;
        }

            .btn-primary:hover {
                background-color: #3700b3; /* Efecto hover morado oscuro */
            }

        .card-text strong {
            color: #ffcc00; /* Resaltar los datos importantes en amarillo */
        }

        .d-flex {
            min-height: 100vh; /* Asegura que el contenedor ocupe toda la altura */
        }

        .card-body {
            padding: 2rem;
        }

        .text-success {
            color: #81c784; /* Verde suave */
        }

        .btn {
            transition: background-color 0.3s ease;
        }
    </style>
}

<div class="d-flex justify-content-center align-items-center">
    <div class="card shadow p-4" style="width: 22rem;">
        <div class="card-body">
            <h3 class="card-title text-success">¡El pago ha sido exitoso!</h3>
            <p class="card-text mt-3">
                <strong>ID de la Reserva:</strong> @reservaId <br />
                <strong>Monto pagado (Seña):</strong> $@montoSena
            </p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-4">Volver al Inicio</a>
        </div>
    </div>
</div>
