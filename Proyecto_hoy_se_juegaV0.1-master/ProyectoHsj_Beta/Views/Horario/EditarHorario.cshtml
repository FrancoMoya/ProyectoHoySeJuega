@model ProyectoHsj_Beta.ViewsModels.HorarioViewModel

@{
    ViewData["Title"] = "Editar Horario";
}

<h2>Editar Horario</h2>

<form asp-action="EditarHorario" method="post">
    <input type="hidden" asp-for="IdHorarioDisponible" />

    <div class="form-group">
        <label asp-for="FechaHorario">Fecha</label>
        <input asp-for="FechaHorario" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="HoraInicio">Hora Inicio</label>
        <input asp-for="HoraInicio" class="form-control" type="time" />
    </div>

    <div class="form-group">
        <label asp-for="HoraFin">Hora Fin</label>
        <input asp-for="HoraFin" class="form-control" type="time" />
    </div>

    <div class="form-group form-check">
        <input asp-for="DisponibleHorario" class="form-check-input" type="checkbox" />
        <label asp-for="DisponibleHorario" class="form-check-label">¿Disponible?</label>
        <!-- Campo oculto para manejar el false -->
        <input type="hidden" name="DisponibleHorario" value="false" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="ManageView" class="btn btn-secondary">Cancelar</a>
</form>