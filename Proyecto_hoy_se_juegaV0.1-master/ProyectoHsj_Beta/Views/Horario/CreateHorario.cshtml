@model ProyectoHsj_Beta.ViewsModels.HoraViewModel

@{
    ViewData["Title"] = "Crear Horario";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <div class="card shadow-lg p-4 bg-dark text-white rounded">
                <h2 class="text-center mb-4">@ViewData["Title"]</h2>

                <form asp-action="CreateHorario" method="post">
                    <div class="form-group">
                        <label asp-for="IdCancha" class="control-label">Cancha</label>
                        <select asp-for="IdCancha" class="form-control custom-select">
                            <option value="">Seleccione una cancha</option>
                            <option value="1">Cancha 1</option>
                            <option value="2">Cancha 2</option>
                            <!-- Agrega más opciones si es necesario -->
                        </select>
                        <span asp-validation-for="IdCancha" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FechaHorario" class="control-label">Fecha</label>
                        <input asp-for="FechaHorario" class="form-control" type="date" />
                        <span asp-validation-for="FechaHorario" class="text-danger"></span>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="HoraInicio" class="control-label">Hora de Inicio</label>
                            <input asp-for="HoraInicio" class="form-control" type="time" />
                            <span asp-validation-for="HoraInicio" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="HoraFin" class="control-label">Hora de Fin</label>
                            <input asp-for="HoraFin" class="form-control" type="time" />
                            <span asp-validation-for="HoraFin" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="DisponibleHorario" class="form-check-input" type="checkbox" />
                        <label asp-for="DisponibleHorario" class="form-check-label">Disponible</label>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("ManageView", "Horario")" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-arrow-left"></i> Volver
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg shadow-lg">
                            <i class="fas fa-save"></i> Guardar
                        </button>
                    </div>
                </form>

                @if (TempData["Message"] != null)

                {
                    <div class="alert alert-success mt-4 text-center">
                        @TempData["Message"]
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- Estilos personalizados -->
<style>
    body {
        background-color: #2c3e50; /* Fondo oscuro elegante */
    }

    .card {
        background-color: #34495e; /* Fondo oscuro para la tarjeta */
    }

    .form-control, .custom-select {
        background-color: #1c2833;
        border: 1px solid #5d6d7e;
        color: white;
    }

        .form-control:focus, .custom-select:focus {
            background-color: #1c2833;
            border-color: #3498db;
            box-shadow: none;
            color: white;
        }

    .form-check-input {
        background-color: #3498db;
        border-color: #3498db;
    }

        .form-check-input:checked {
            background-color: #2ecc71;
            border-color: #2ecc71;
        }

    .btn-primary {
        background-color: #3498db;
        border-color: #3498db;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }

    .btn-outline-light {
        border-color: #ecf0f1;
        color: #ecf0f1;
    }

        .btn-outline-light:hover {
            background-color: #ecf0f1;
            color: #2c3e50;
        }

    h2 {
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .alert-success {
        background-color: #2ecc71;
        border-color: #27ae60;
        color: white;
    }
</style>