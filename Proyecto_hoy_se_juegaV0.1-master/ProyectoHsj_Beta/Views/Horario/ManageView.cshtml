@model IEnumerable<ProyectoHsj_Beta.Models.HorarioDisponible>

@{
    ViewData["Title"] = "Horarios Disponibles";
    Layout = "~/Views/Shared/Layout_admin.cshtml";
}

<style>
    h1 {
        color: bisque;
        text-align: center;
        margin-top: 20px;
    }

    .card {
        border-radius: 15px;
        margin: 20px auto;
        max-width: 100%;
    }

    .btn-danger, .btn-warning, .btn-primary {
        border-radius: 5px;
    }

    .table {
        margin-top: 20px;
    }

    .alert {
        border-radius: 5px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .action-buttons {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
        flex-wrap: wrap;
    }

    .search-container {
        margin-bottom: 20px;
    }

    /* Estilo para pantallas pequeñas */
    @@media (max-width: 768px) {
        .form-group {
            margin-bottom: 10px;
        }

        .action-buttons {
            flex-direction: column;
            align-items: flex-start;
        }

        .card-body {
            padding: 15px;
        }

        .table {
            font-size: 12px;
        }

        .table-responsive {
            overflow-x: auto;
        }

        .btn-block {
            width: 100%;
            margin-bottom: 10px;
        }
    }
</style>

<h1>Gestión de Horarios</h1>

<!-- Cuadro (card) para contener los horarios -->
<div class="card shadow-lg">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Gestión de Horarios</h5>
    </div>

    <!-- Mensaje de éxito o error -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["Message"]
        </div>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="card-body">
        <!-- Formulario de búsqueda -->
        <div class="search-container">
            <form asp-action="Search" method="get" class="mb-4">
                <div class="row">
                    <div class="col-md-5 col-12 form-group">
                        <label for="fecha">Fecha:</label>
                        <input type="date" id="fecha" name="fecha" class="form-control" />
                    </div>
                    <div class="col-md-5 col-12 form-group">
                        <label for="horaInicio">Hora Inicio:</label>
                        <input type="time" id="horaInicio" name="horaInicio" class="form-control" />
                    </div>
                    <div class="col-md-2 col-12 form-group align-self-end">
                        <button type="submit" class="btn btn-primary btn-block">Buscar</button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Botones para generar y eliminar horarios -->
        <div class="action-buttons">
            <form asp-action="EliminarHorariosDeLaSemana" method="post">
                <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar Todos los Horarios</button>
            </form>
            <button type="button" class="btn btn-primary btn-block btn-sm" onclick="location.href='@Url.Action("GenerarFechasYHorariosSemana", "Horario")'">
                Generar Horarios de la Semana
            </button>
        </div>

        <!-- Boton para crear horarios -->
        <div class="mb-3">
            <a asp-action="CreateHorario" class="btn btn-primary btn-block">Crear Nuevo Horario</a>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-warning" role="alert">
                No hay horarios disponibles.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th>Fecha</th>
                            <th>Hora Inicio</th>
                            <th>Hora Fin</th>
                            <th>Disponibilidad</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var horario in Model)
                        {
                            <tr>
                                <td>@horario.FechaHorario.ToShortDateString()</td>
                                <td>@horario.HoraInicio</td>
                                <td>@horario.HoraFin</td>
                                <td>
                                    @if (horario.DisponibleHorario == true)
                                    {
                                        <span class="badge bg-success">Disponible</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">No Disponible</span>
                                    }
                                </td>
                                <td>
                                    <form asp-action="EliminarHorario" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@horario.IdHorarioDisponible" />
                                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
